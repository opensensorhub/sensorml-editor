<?xml version="1.0" encoding="UTF-8"?>
<!-- When updating your version of GWT, you should also update this DTD reference, 
	so that your app can take advantage of the latest GWT module capabilities. -->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN"
  "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">

<module rename-to='sensormleditor'>
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name='com.google.gwt.user.User' />

	<inherits name='com.google.gwt.xml.XML' />
	<inherits name="com.google.gwt.http.HTTP" />
	<inherits name='com.sensia.RelaxNG' />
	<inherits name='com.google.gwt.user.theme.clean.Clean' />
	<inherits name="org.moxieapps.gwt.highcharts.Highcharts" />
	<inherits name='org.gwtopenmaps.openlayers.OpenLayers' />
	<inherits name="elemental.Elemental" />
	<inherits name="com.google.gwt.resources.Resources" />
	<entry-point class='com.sensia.tools.client.SensorMLEditor' />
	<inherits name="com.smartgwt.SmartGwt" />
	<inherits name="com.smartclient.theme.enterprise.Enterprise" />

	<source path='client' />
	<source path='shared' />

	<!-- allow Super Dev Mode -->
	<add-linker name="xsiframe" />

	<set-property name="user.agent" value="ie8,ie9,ie10,gecko1_8,safari" />

	<!-- Base CSS SyntaxHighlighter -->
	<stylesheet src="styles/shCore.css" />

	<!-- Eclipse Syntax Theme -->
	<stylesheet src="styles/shThemeDefault.css" />

	<!-- Base JS SyntaxHighlighter -->
	<script src="scripts/shCore.js" />

	<!-- Extension for each wanted language to support -->
	<script src="scripts/shBrushJava.js" />
	<script src="scripts/shBrushXml.js" />

</module>
